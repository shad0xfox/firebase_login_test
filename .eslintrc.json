{
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "eqeqeq": "error",
      "no-console": "off",
      "prettier/prettier": "error",
      "no-unused-vars": 1
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "requireConfigFile": false
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "commonjs": true
    },
    "ignorePatterns": [
      "node_modules",
      "build",
      "dist",
      "public"
    ]
  }